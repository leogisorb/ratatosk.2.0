:root{
  --breite: 2vw;
  --höhe: 1vh;
  --polster: 0.2vw;
  --background: background_light;
  --platz: 0.5vw;
  --maincolor:#D2691E;
  --main_light: #FFFAF0;
  --main_dark:#1C2129;
  --defaultButton:#e7e7e7;
  overflow-x: hidden;
  overflow-y: hidden;

}
body{
  max-height:100vh;
  max-width: 100vw;
  background-color: var(--main_light);
  font-family: Verdana, sans-serif;
  font-size:100%;

}
.dark{
  background-color: var(--main_dark);
  color: white;

}
.dark img { 

 filter: invert(100%) ;
 /*sepia(1%) saturate(1753%) hue-rotate(339deg) brightness(112%) contrast(105%); Filter für floralwhite*/
}

.site_name{
  color: var(--maincolor);
  font-size: 2.5vw;
  padding: 5px;
  display: inline;
  align-items: center;
  align-content: center;
  text-align: center;
}

.container{
  columns: 200px 3;
  break-inside:avoid;
  margin:auto;
  height: 80vh;
  width:90vw;
  align-items: center;
  align-content: center;
}
.group{
  margin: auto;
  display: inline-grid;
  align-items: center;
  align-content: center;

}

.group img{
  height: 90%;
  width: 90%;
  flex: auto;
  margin:auto;
  min-height:70px;
  min-width:70px;
}
.group p{
  font-size: 4vw;
  text-align: center;
  margin:auto;
}

.startimage{
  height:40vh;
  width:60vw;
  padding:var(--polster);
  font-size: 2em;
}
.smallContainer{
  float:left;
  position:relative;
  width:6vw;
}
.smallPicture{
  display:inline-flex;
 /* float:left;*/
  width:5vw;
  height:10vh;
  
  min-width:40px;
  /*border: 3px solid black;
  border-radius: 20px;*/
}
.smallPicture:hover{
  filter: invert(59%) sepia(34%) saturate(5314%) hue-rotate(350deg) brightness(86%) contrast(90%);/*Filter für #D2691E (chocolate)*/
  /*border-color: #7CFC00;*/
}

.buttonstyles{
  border-radius:10px;
  align-items: center;
  align-content: center;
  margin: auto;
  width: 90%;
  height:80%;
  display: flex;
  flex-flow: row wrap;
}
.buttonstyles button{
  background-color: var(--defaultButton);
  width:8%;
  height:4%;
  border-radius:5px;
  text-align: center;
  color:black;
  align-self: center;
  margin:0.2%;
  font-size: 1.5em;
  flex: auto;
  font-size: 3vw;
}
.buttonstyles button:hover{
  background-color: var(--maincolor);
  /*height: 60px;
  margin: 0px 19px;*/
}
.button_div{
  border-radius: 10px;
  border-style: solid;
  border-color: var(--maincolor) !important;
}
.keydesign{
  border: 5px;
  border-radius: 10px;
  border-style: solid;
  border-color: transparent;
  align-items: center;
  align-content: center;
  margin: auto;
  width:99%;
  display:flex;
}
.SelectRow{
  display:flex;
  flex-flow: row wrap;
  border: 5px;
  border-radius: 10px;
  border-style: solid;
  border-color: transparent;
  align-items: center;
  align-content: center;
  margin: auto;
  width:99%;

}
.SelectButton{
  background-color: var(--defaultButton);
  width:8%;
  height:3%;
  border-radius:5px;
  text-align: center;
  color:black;
  align-self: center;
  display:inline-block;
  margin:0.2%;
  font-size: 1em;
  flex: auto;
}

.SelectButton:hover{
  background-color: var(--maincolor);
  border-color: black;
}
.KeyboardButton{
  background-color: var(--defaultButton);
  width:8%;
  height:3%;
  border-radius:5px;
  text-align: center;
  color:black;
  align-self: center;
  display:inline-block;
  font-size: 1em;
  flex: auto;
}

.KeyboardButton:hover{
  background-color: var(--maincolor);
  border-color: black;
}

.messagebox{
  font-size: 1.5em;
  display:flex;
  text-align: center;
  align-self: center;
  width: 90%;
  height: 10vh;
}

#input_video{
  display: none;
}

@media (orientation:landscape){
  .KeyboardButton{
      font-size: 5.5vh;
      height:7vh;
  }
  .group{
      height: 40vh;
      width: 30vw;
  }  
  .site_name{
    font-size: 7vh;
  }
  .SelectButton{
      font-size: 6vh;
      height: 9vh;
    }
    .buttonstyles button{
      height: 20vh;
      width: 40vw;
      font-size: 5vw;
    }
}
@media (orientation:portrait){
    .group{
      height: 33vh;
      width:30vw;
    }
    .site_name{
      font-size: 6vw;
    }
    .KeyboardButton{
      font-size: 3vh;
      height:6vh;
      width:6vw;
    }
    .messagebox{
      font-size: 7vw;
    }
    .buttonstyles button{
      font-size: 10vw;
      width: 50vw;
      height: 10vh;
    }
    .SelectButton{
      font-size: 5vw;
      height: 10vh;
    }
}
